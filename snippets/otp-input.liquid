<style>
  .otp-inputs {
    display: flex;
    gap: 8px;
    justify-content: center;
  }
  .otp-digit {
    width: 55px;
    text-align: center;
    border: 2px solid #e1e5e9;
    padding: 18px 16px;
    border-radius: 6px;
    transition: border-color 0.3s ease;
    flex: 1;
  }

  .otp-digit:focus {
    outline: none;
    border-color: rgb(var(--color-primary-brand));
  }

  .otp-digit.filled {
    border-color: rgb(var(--color-primary-brand));
  }

  .otp-container {
    display: none;
  }

  .otp-container.active {
    display: block;
  }

  .otp-message {
    font-size: 14px;
    margin-top: 8px;
    text-align: center;
  }

  .otp-message.success {
    color: #363;
  }

  .otp-message.error {
    color: #c33;
  }
</style>

<div class="otp-container" id="otp-container">
  <div class="otp-inputs">
    <input
      type="text"
      class="otp-digit fs-14-lh-20-ls-0_1  ff-general-sans fw-500"
      maxlength="1"
      data-index="0"
      inputmode="numeric"
      placeholder="-"
    >
    <input
      type="text"
      class="otp-digit fs-14-lh-20-ls-0_1  ff-general-sans fw-500"
      maxlength="1"
      data-index="1"
      inputmode="numeric"
      placeholder="-"
    >
    <input
      type="text"
      class="otp-digit fs-14-lh-20-ls-0_1  ff-general-sans fw-500"
      maxlength="1"
      data-index="2"
      inputmode="numeric"
      placeholder="-"
    >
    <input
      type="text"
      class="otp-digit fs-14-lh-20-ls-0_1  ff-general-sans fw-500"
      maxlength="1"
      data-index="3"
      inputmode="numeric"
      placeholder="-"
    >
    <input
      type="text"
      class="otp-digit fs-14-lh-20-ls-0_1  ff-general-sans fw-500"
      maxlength="1"
      data-index="4"
      inputmode="numeric"
      placeholder="-"
    >
    <input
      type="text"
      class="otp-digit fs-14-lh-20-ls-0_1  ff-general-sans fw-500"
      maxlength="1"
      data-index="5"
