{% paginate customer.orders by 10 %}
  <div class="flex flex-col gap-24 overflow-hidden">
    <div>
      <h2 class="m-0 ff-general-sans fs-23-lh-24-ls-0 fw-500 ">{{ 'customer.order.title' | t }}</h2>
    </div>

    {%- if customer.orders.size > 0 -%}
      <table role="table">
        <thead role="rowgroup">
          <tr role="row" class="h-48">
            <th
              scope="col"
              role="columnheader"
              class="pt-0 pb-0 pl-12 pr-12 fs-16-lh-16-ls-0 fw-500 ff-general-sans text-primary-70pct"
            >
              {{ 'customer.order.order_number' | t }}
            </th>
            <th
              scope="col"
              role="columnheader"
              class="pt-0 pb-0 pl-12 pr-12 fs-16-lh-16-ls-0 fw-500 ff-general-sans text-primary-70pct"
            >
              {{ 'customer.order.date' | t }}
            </th>
            <th
              scope="col"
              role="columnheader"
              class="pt-0 pb-0 pl-12 pr-12 fs-16-lh-16-ls-0 fw-500 ff-general-sans text-primary-70pct"
            >
              {{ 'customer.order.payment_type' | t }}
            </th>
            <th
              scope="col"
              role="columnheader"
              class="pt-0 pb-0 pl-12 pr-12 fs-16-lh-16-ls-0 fw-500 ff-general-sans text-primary-70pct"
            >
              {{ 'customer.order.quantity' | t }}
            </th>
            <th
              scope="col"
              role="columnheader"
              class="pt-0 pb-0 pl-12 pr-12 fs-16-lh-16-ls-0 fw-500 ff-general-sans text-primary-70pct"
            >
              {{ 'customer.order.status' | t }}
            </th>
            <th
              scope="col"
              role="columnheader"
              class="pt-0 pb-0 pl-12 pr-12 fs-16-lh-16-ls-0 fw-500 ff-general-sans text-primary-70pct"
            >
              {{ 'customer.order.total' | t }}
            </th>
            <th
              scope="col"
              role="columnheader"
              class="pt-0 pb-0 pl-12 pr-12 fs-16-lh-16-ls-0 fw-500 ff-general-sans text-primary-70pct"
            >
              {{ 'customer.order.action' | t }}
            </th>
          </tr>
        </thead>
        <tbody role="rowgroup">
          {%- for order in customer.orders -%}
            <tr role="row" class="h-48">
              <td role="cell" class="pt-0 pb-0 pl-12 pr-12">
                <a
                  href="{{ order.customer_url }}"
                  class="order-number ff-general-sans fw-600 fs-16-lh-24-ls-0 text-brand"
                >
                  #{{ order.order_number | default: order.name | remove: '#' }}
                </a>
              </td>
              <td role="cell" class="pt-0 pb-0 pl-12 pr-12">
                <span class="ff-general-sans fw-400 fs-16-lh-24-ls-0">
                  {{- order.created_at | date: '%B %d, %y' -}}
                </span>
              </td>
              <td role="cell">
                {% assign status_class = '' %}
                {% case order.financial_status %}
                  {% when 'paid' %}
                    {% assign status_class = 'status-paid' %}
                  {% when 'pending' %}
                    {% assign status_class = 'status-pending' %}
                  {% when 'authorized' %}
                    {% assign status_class = 'status-authorized' %}
                  {% when 'partially_paid' %}
                    {% assign status_class = 'status-partially-paid' %}
                  {% when 'partially_refunded' %}
                    {% assign status_class = 'status-partially-refunded' %}
                  {% when 'refunded' %}
                    {% assign status_class = 'status-refunded' %}
                  {% when 'voided' %}
                    {% assign status_class = 'status-voided' %}
                  {% when 'cancelled' %}
                    {% assign status_class = 'status-cancelled' %}
                  {% else %}
                    {% assign status_class = 'status-ongoing' %}
                {% endcase %}

                <div class="ff-general-sans fw-400 fs-16-lh-24-ls-0 flex items-center gap-4 justify-start">
                  <span class="rounded-full h-8 w-8 {{ status_class }}"></span>
                  {{ order.financial_status_label }}
                </div>
              </td>
              <td role="cell" class="pt-0 pb-0 pl-12 pr-12">
                <span class="ff-general-sans fw-400 fs-16-lh-24-ls-0">{{ order.line_items.size }}</span>
              </td>
              <td role="cell" class="pt-0 pb-0 pl-12 pr-12">
                <span class=" ff-general-sans fw-400 fs-16-lh-24-ls-0">
                  {{- order.fulfillment_status_label -}}
                </span>
              </td>
              <td role="cell" class="pt-0 pb-0 pl-12 pr-12">
                <span class=" ff-general-sans fw-400 fs-16-lh-24-ls-0 flex gap-4 ">
                  à§³
                  {{- order.total_net_amount | money_without_currency -}}
                </span>
              </td>
              <td role="cell" class="pt-0 pb-0 pl-12 pr-12">
                <div>
                  <a href="{{ order.customer_url }}" class="action-btn view-btn text-brand" title="View Order">
                    {% render 'eye-icon' %}
                  </a>
                </div>
              </td>
            </tr>
          {%- endfor -%}
        </tbody>
      </table>

    {%- else -%}
      <div>
        <p class="ff-general-sans fs-23-lh-24-ls-0 fw-600  text-center">
          {{ 'customer.order.none' | t }}
        </p>
      </div>
    {%- endif -%}

    {% render 'pagination', paginate: paginate, section_id: 'orders-section' %}
  </div>
{% endpaginate %}
