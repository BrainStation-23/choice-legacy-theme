{% comment %}
  Cart Drawer Snippet
  -------------------
  This is the structure for our cart drawer. It's controlled by the
  <cart-drawer> web component. It will be populated with cart items
  dynamically via JavaScript.
{% endcomment %}
<cart-drawer class="cart-drawer hidden">
  {% comment %} The overlay will close the drawer when clicked {% endcomment %}
  <div class="cart-drawer__overlay"></div>

  <div class="cart-drawer__container" role="dialog" aria-modal="true" aria-labelledby="CartDrawerHeading">
    <div class="cart-drawer__header">
      <h2 class="cart-drawer__heading" id="CartDrawerHeading">Your Cart</h2>
      <button type="button" class="cart-drawer__close-btn" aria-label="Close cart">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="icon-close">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <div class="cart-drawer__body">
      {% comment %} Cart items will be rendered here by our Web Component {% endcomment %}
    </div>

    <div class="cart-drawer__footer">
      <div class="cart-drawer__summary">
        <p>Subtotal</p>
        <p class="cart-drawer__subtotal">{{ cart.total_price | money }}</p>
      </div>
      <a href="{{ routes.cart_url }}" class="button button--primary w-full">
        Checkout
      </a>
    </div>
  </div>
</cart-drawer>
