{% comment %} <style>
  #beauty-tabs {
    display: flex;
    gap: 10px;
  }

  .face-image_upload-spinner {
    border: 4px solid rgba(0, 0, 0, 0.1);
    border-left-color: #007bff;
    border-radius: 50%;
    width: 24px;
    height: 24px;
    animation: spin 1s linear infinite;
    display: inline-block;
    vertical-align: middle;
    margin-left: 10px;
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>

<div id="beauty-profile">
  <h2>Beauty Profile</h2>

  <div>
    <label for="customer-age">Enter your age:</label>
    <input id="customer-age" type="number" required>
  </div>

  <div id="beauty-tabs"></div>

  <div id="questions-container">
    <p>Select a tab to load questions.</p>
  </div>

  <!-- Add Save button here -->
  <button
    id="save-answers"
    style="
      display:none;
      margin-top: 20px;
      padding: 10px 15px;
      font-size: 16px;
      cursor: pointer;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
    "
  >
    Save
  </button>

  <div id="suggestion-output" style="margin-top: 1rem; font-weight: bold;"></div>
</div> {% endcomment %}

<style>
  .tab-button.active {
    border: 2px solid rgb(var(--color-primary-brand));
  }
</style>

<div>
  <div class="flex flex-col gap-24">
    {% render "beauty-profile-banner" %}

    {% render "beauty-profile-types" %}
  </div>
</div>

<div id="consultation-section" class="mt-24 hidden">
  <div class="flex flex-col gap-16">
    <h2 class="fw-400 fs-36-lh-40-ls-0 uppercase">{{ 'beauty_profile.routine.heading' | t }}</h2>
    <div class="tab-buttons flex gap-8">
      <button class="tab-button p-18 fw-500 fs-13-lh-16-ls-0_2 border-1 border-solid border-color bg-transparent cursor-pointer rounded-100" data-profile="skincare">{{ 'beauty_profile.routine.tabs.skincare' | t }}</button>
      <button class="tab-button p-18 fw-500 fs-13-lh-16-ls-0_2 border-1 border-solid border-color bg-transparent cursor-pointer rounded-100" data-profile="haircare">{{ 'beauty_profile.routine.tabs.haircare' | t }}</button>
      <button class="tab-button p-18 fw-500 fs-13-lh-16-ls-0_2 border-1 border-solid border-color bg-transparent cursor-pointer rounded-100" data-profile="makeup">{{ 'beauty_profile.routine.tabs.makeup' | t }}</button>
    </div>
  </div>
  
  <div data-content="consultation" class="hidden">
    {% render "beauty-profile-consultation" %}
  </div>
  
  <div data-content="suggestions" class="hidden">
    {% render "beauty-profile-product-suggestions" %}
  </div>
</div>

{% render "beauty-profile-modal" %}

<script src="{{ 'beauty-profile.js' | asset_url }}" defer></script>
