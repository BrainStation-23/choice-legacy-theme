<div class="review-page-container flex flex-col gap-24">
  <h2 class="ff-general-sans fw-500 fs-23-lh-24-ls-0 text-left">{{ 'review.title' | t }}</h2>

  <div id="review-loader">
    <p class="fw-500 fs-14-lh-16-ls-0">{{ 'review.loading' | t }}</p>
  </div>
  
  <table class="review-table" style="display: none;">
    <thead>
      <tr class="h-48">
        <th class="fw-500 fs-16-lh-20-ls-0_1 pt-0 pb-0 pl-12 pr-12">{{ 'review.table.serial' | t }}</th>
        <th class="fw-500 fs-16-lh-20-ls-0_1 pt-0 pb-0 pl-12 pr-12">{{ 'review.table.product' | t }}</th>
        <th class="fw-500 fs-16-lh-20-ls-0_1 pt-0 pb-0 pl-12 pr-12 text-center">{{ 'review.table.rating' | t }}</th>
        <th class="fw-500 fs-16-lh-20-ls-0_1 text-right pt-0 pb-0 pl-12 pr-12">{{ 'review.table.action' | t }}</th>
      </tr>
    </thead>
    <tbody id="customer-review-items">
       </tbody>
  </table>

  <div id="empty-review-message" style="display: none;">
    <p>{{ 'review.empty' | t }}</p>
  </div>
</div>
<script>
  window.allProductsData = {
    {%- for product in collections.all.products -%}
      "{{ product.handle }}": {
        "title": {{ product.title | json }},
        "image": {{ product.featured_image | image_url: width: 100 | json }}
      }{% unless forloop.last %},{% endunless %}
    {%- endfor -%}
  };
</script>
<script src="{{ 'reviews.js' | asset_url }}" defer></script>