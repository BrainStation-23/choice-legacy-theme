<style>
  #beauty-profile-modal-body {
    transition: opacity 0.2s ease-in-out, transform 0.2s ease-in-out;
  }

  .is-transitioning {
    opacity: 0;
    transform: translateX(-20px);
  }

  .radio-option input + label {
    position: static;
    pointer-events: auto;
  }
 
  .radio-option input[type="radio"]:checked + .radio-option-label {
    border-color: rgb(var(--color-primary-brand));
    border-width: 2px;
  }
  .radio-option input[type="radio"]:checked + .radio-option-label .radio-custom {
    border-color: rgb(var(--color-primary-brand));
    border-width: 2px;
  }
  .radio-option input[type="radio"]:checked + .radio-option-label .radio-option-text {
    color: rgb(var(--color-primary-brand));
  }

  .radio-custom::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: transparent;
    transition: background-color 0.2s ease-in-out;
  }

  .radio-option input[type="radio"]:checked + .radio-option-label .radio-custom {
    border-color: rgb(var(--color-primary-brand));
    border-width: 2px;
  }

  .radio-option input[type="radio"]:checked + .radio-option-label .radio-custom::after {
    background-color: rgb(var(--color-primary-brand));
  }

  .picture-options-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.5rem; /* 24px */
}

.picture-option-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2px solid transparent;
  border-radius: 12px;
  padding: 0.5rem;
  cursor: pointer;
  background: none;
  transition: border-color 0.2s ease-in-out;
}

.picture-option-card img {
  width: 100%;
  object-fit: contain;
  border-radius: 8px;
  pointer-events: none; /* Make sure clicks go to the button */
}

.picture-option-card.is-selected {
  border-color: rgb(var(--color-primary-brand));
}
</style>

<div id="beauty-profile-modal" class="beauty-profile-modal-overlay overlay inset-0 hidden fixed z-9999 items-center justify-center">
  <div class="beauty-profile-modal-content relative w-full rounded-16 bg-bg">
    <button id="beauty-profile-modal-close-btn" class="beauty-profile-modal-close-btn absolute top-24 right-24 bg-transparent border-none cursor-pointer w-28 h-28">{% render "icon-close", cls: "w-14 h-14 svg-primary-optional" %}</button>
    <div id="beauty-profile-modal-body" class="flex flex-col gap-16">
    </div>
  </div>
</div>
