<div class="wishlist-page-container flex flex-col gap-24">
  <h2 class="ff-general-sans fw-500 fs-23-lh-24-ls-0 text-left">{{ 'wishlist.title' | t }}</h2>

  <div id="wishlist-loader" class="flex justify-center items-center py-40">
    <spinner-component size="large" color="primary"></spinner-component>
  </div>
  
  <table class="wishlist-desktop-view table sm:hidden hidden">
    <thead>
      <tr class="h-48">
        <th class="fw-500 fs-16-lh-20-ls-0_1 w-70">{{ 'wishlist.table.image' | t }}</th>
        <th class="fw-500 fs-16-lh-20-ls-0_1">{{ 'wishlist.table.name' | t }}</th>
        <th class="fw-500 fs-16-lh-20-ls-0_1">{{ 'wishlist.table.price' | t }}</th>
        <th class="wishlist-actions fw-500 fs-16-lh-20-ls-0_1 text-right">{{ 'wishlist.table.action' | t }}</th>
      </tr>
    </thead>
    <tbody id="customer-wishlist-items-desktop">
    </tbody>
  </table>

  <div id="customer-wishlist-items-mobile" class="wishlist-mobile-view hidden sm:flex flex-col gap-24">
  </div>

  <div id="empty-wishlist-message" class="hidden fw-500 fs-14-lh-16-ls-0">
    <p>{{ 'wishlist.empty' | t }}</p>
  </div>

  <div id="wishlist-pagination-controls" class="flex justify-end items-center gap-8" style="display: none;">
  </div>
</div>
