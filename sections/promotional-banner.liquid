    }
  ],
  "blocks": [
    {
      "type": "banner_item",
      "name": "Banner Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner_image",
          "label": "Banner Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promotional Banner",
      "blocks": [
        {
          "type": "banner_item",
        },
        {
          "type": "banner_item",
        },
        {
          "type": "banner_item",
        },
        {
          "type": "banner_item",
        }
      ]
    }
  ]
}
{% endschema %}