{{ 'promotional-banner.css' | asset_url | stylesheet_tag }}

<style>
.promotional-banner-section {
  width: 100%;
  padding: 0;
}

.promotional-banner-container {
  grid-template-columns: 1fr 1fr;
}

.promotional-banner-item {
  position: relative;
  overflow: hidden;
  height: 308px;
}

.promotional-banner-link {
  display: block;
  height: 100%;
  text-decoration: none;
}

.promotional-banner-content {
  position: relative;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
}

.promotional-banner-content:hover {
  transform: scale(1.02);
}

.promotional-banner-image {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.promotional-banner-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.promotional-banner-placeholder {
  width: 100%;
  height: 100%;
}

.promotional-banner-placeholder svg {
  width: 100%;
  height: 100%;
}

.promotional-banner-mobile {
  display: none;
  width: 100%;
  height: 100%;
}

.promotional-banner-desktop {
  display: block;
  height: 100%;
}

@media screen and (max-width: 768px) {
  .promotional-banner-item {
    height: 88px;
  }
  
  .promotional-banner-mobile {
    display: block;
  }
  
  .promotional-banner-desktop {
    display: none;
  }
}
</style>

<div class="promotional-banner-section">
  <div class="promotional-banner-container grid gap-16 mobile-gap-8 page-width">
    {%- for block in section.blocks -%}
      <div class="promotional-banner-item" {{ block.shopify_attributes }}>
        {%- if block.settings.link != blank -%}
          <a href="{{ block.settings.link }}" class="promotional-banner-link">
        {%- endif -%}
        
        <div class="promotional-banner-content">
          <div class="promotional-banner-image">
            {%- assign desktop_image = block.settings.banner_image -%}
            {%- assign mobile_image = block.settings.mobile_banner_image -%}
            
            {%- if desktop_image != blank or mobile_image != blank -%}
              {%- comment -%} Desktop Image {%- endcomment -%}
              <div class="promotional-banner-desktop">
                {% render 'image', 
                   image: desktop_image, 
                   width: 600, 
                   css_classes: 'promotional-banner-img' %}
              </div>
              
              {%- comment -%} Mobile Image (fallback to desktop if mobile not set) {%- endcomment -%}
              <div class="promotional-banner-mobile">
                {%- if mobile_image != blank -%}
                  {% render 'image', 
                     image: mobile_image, 
                     width: 600, 
                     css_classes: 'promotional-banner-img' %}
                {%- else -%}
                  {% render 'image', 
                     image: desktop_image, 
                     width: 600, 
                     css_classes: 'promotional-banner-img' %}
                {%- endif -%}
              </div>
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag: 'promotional-banner-img promotional-banner-placeholder' }}
            {%- endif -%}
          </div>
        </div>
        
        {%- if block.settings.link != blank -%}
          </a>
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Promotional Banner",
  "class": "section-promotional-banner",
  "max_blocks": 4,
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    }
  ],
  "blocks": [
    {
      "type": "banner_item",
      "name": "Banner Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner_image",
          "label": "Banner Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_banner_image",
          "label": "Mobile Banner Image (Optional)"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promotional Banner",
      "blocks": [
        {
          "type": "banner_item"
        },
        {
          "type": "banner_item"
        },
        {
          "type": "banner_item"
        },
        {
          "type": "banner_item"
        }
      ]
    }
  ]
}
{% endschema %}