<div class="promotional-banner-section promotional-banner-section-{{ section.id }} pt-88 pb-88 sm:pt-16 sm:pb-16 w-full">
  <div class="grid grid-cols-fixed-2 gap-16 sm:gap-8 page-width">
    {%- for block in section.blocks -%}
      <div class="relative overflow-hidden h-308 sm:h-88" {{ block.shopify_attributes }}>
        {%- if block.settings.link != blank -%}
          <a href="{{ block.settings.link }}" class="block h-full no-underline">
        {%- endif -%}

        <div class="relative h-full transition-transform">
          <div class="w-full h-full">
            {%- assign desktop_image = block.settings.banner_image -%}
            {%- assign mobile_image = block.settings.mobile_banner_image -%}

            {%- if desktop_image != blank or mobile_image != blank -%}
              <div
                class="media w-full"
                style="padding-top: {{ 1 | divided_by: 1 | times: 100 }}%;"
              >
                {%- capture sizes %}{% render 'sizes-attribute', grid: true, min: 1, sm: 1, lg: 1, xl: 1 %}{% endcapture -%}
                {%- render 'image-desktop-and-mobile',
                  class: 'img-fit',
                  desktop_image: desktop_image,
                  mobile_image: mobile_image,
                  src_width_mobile: 600,
                  widths_mobile: '600, 600, 600, 600',
                  src_width_desktop: 1440,
                  widths_desktop: '602, 602, 602, 602, 602, 602, 602, 602',
                  lazy_load: true,
                  fetchpriority: "high",
                  sizes: sizes,
                  block: block
                -%}
              </div>
            {%- else -%}
              {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover placeholder-svg' }}
            {%- endif -%}
          </div>
        </div>

        {%- if block.settings.link != blank -%}
          </a>
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Promotional Banner",
  "class": "section-promotional-banner",
  "max_blocks": 4,
  "settings": [],
  "blocks": [
    {
      "type": "banner_item",
      "name": "Banner Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner_image",
          "label": "Banner Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_banner_image",
          "label": "Mobile Banner Image (Optional)"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promotional Banner",
      "blocks": [
        {
          "type": "banner_item"
        },
        {
          "type": "banner_item"
        },
        {
          "type": "banner_item"
        },
        {
          "type": "banner_item"
        }
      ]
    }
  ]
}
{% endschema %}
