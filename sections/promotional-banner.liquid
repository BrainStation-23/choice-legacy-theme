{{ 'promotional-banner.css' | asset_url | stylesheet_tag }}

<style>
.promotional-banner-section {
  width: 100%;
  padding: 0;
}

.promotional-banner-container {
  grid-template-columns: 1fr 1fr;
}

.promotional-banner-item {
  position: relative;
  overflow: hidden;
  height: 308px;
}

.promotional-banner-link {
  display: block;
  height: 100%;
  text-decoration: none;
}

.promotional-banner-content {
  position: relative;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
}

.promotional-banner-content:hover {
  transform: scale(1.02);
}

.promotional-banner-image {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.promotional-banner-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.promotional-banner-placeholder {
  width: 100%;
  height: 100%;
}

.promotional-banner-placeholder svg {
  width: 100%;
  height: 100%;
}

@media screen and (max-width: 768px) {
  .promotional-banner-item {
    height: 88px;
  }
}
</style>


<div class="promotional-banner-section">
  <div class="promotional-banner-container grid gap-16 mobile-gap-8 page-width">
    {%- for block in section.blocks -%}
      <div class="promotional-banner-item" {{ block.shopify_attributes }}>
        {%- if block.settings.link != blank -%}
          <a href="{{ block.settings.link }}" class="promotional-banner-link">
        {%- endif -%}
        
        <div class="promotional-banner-content">
          <div class="promotional-banner-image">
            {%- if block.settings.banner_image != blank -%}
              {% render 'image', 
                 image: block.settings.banner_image, 
                 width: 600, 
                 css_classes: 'promotional-banner-img' %}
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag: 'promotional-banner-img promotional-banner-placeholder' }}
            {%- endif -%}
          </div>
        </div>
        
        {%- if block.settings.link != blank -%}
          </a>
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
