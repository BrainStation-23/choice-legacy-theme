<div class="wishlist-page">
  <h1>My Wishlist: Choice Legacy</h1>
  
  <script>
    {% if customer %}
      window.customerLoggedIn = true;
      window.customerId = {{ customer.id }};
    {% else %}
      window.customerLoggedIn = false;
      window.customerId = null;
    {% endif %}
  </script>

  {% if customer %}
    <!-- Logged in customer wishlist -->
    <div id="wishlist-container">
      <div id="wishlist-loading" style="text-align: center; padding: 50px;">
        Loading your wishlist...
      </div>
      
      <div id="wishlist-content" style="display: none;">
        <div id="wishlist-items"></div>
        <div id="wishlist-empty" style="display: none; text-align: center; padding: 50px;">
          <p>Your wishlist is empty.</p>
          <a href="/collections/all">Continue Shopping</a>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        setTimeout(loadWishlist, 500);
      });
    </script>

    <style>
    .wishlist-item {
      display: flex;
      align-items: center;
      padding: 20px 0;
      border-bottom: 1px solid #eee;
      gap: 20px;
    }
    
    .wishlist-item-details {
      flex: 1;
    }
    
    .wishlist-item-details h3 {
      margin: 0 0 10px 0;
    }
    
    .wishlist-item-details h3 a {
      text-decoration: none;
      color: #333;
    }
    
    .wishlist-item-details p {
      margin: 5px 0;
      color: #666;
    }
    
    .wishlist-item-actions {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    
    .btn-add-to-cart, .btn-remove {
      padding: 8px 16px;
      border: 1px solid #333;
      background: #fff;
      cursor: pointer;
      text-decoration: none;
      text-align: center;
    }
    
    .btn-add-to-cart:hover {
      background: #333;
      color: #fff;
    }
    
    .btn-remove {
      border-color: #ccc;
      color: #666;
    }
    
    .btn-remove:hover {
      background: #f5f5f5;
    }
    </style>

  {% else %}
    <!-- Not logged in -->
    <div style="text-align: center; padding: 50px;">
      <p>Please log in to view your wishlist.</p>
      <a href="/account/login">Log In</a> | <a href="/account/register">Register</a>
    </div>
  {% endif %}
</div>

{% schema %}
  {
    "name": "Wishlist",
    "settings": []
  }
{% endschema %}