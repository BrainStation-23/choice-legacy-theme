<style>
  .banner-with-text-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    position: relative;
  }

  @media screen and (min-width: 750px) {
    .banner-with-text-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .banner-with-text .slide-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .banner-with-text .slide-image-desktop {
    display: none;
  }

  .banner-with-text .slide-image-mobile {
    display: block;
  }

  .banner-with-text .slideshow-nav-button-prev {
    left: 24px;
  }

  .banner-with-text .slideshow-nav-button-next {
    right: 24px;
  }
  
  .banner-with-text-{{ section.id }} .swiper-slide,
  .banner-with-text-{{ section.id }} .static-slide {
    position: relative;
    transition: transform 0.3s ease;
    border-radius: {{ section.settings.slide_border_radius }}px;
    height: 186px;
  }
  
  @media screen and (min-width: 768px) {
    .banner-with-text-{{ section.id }} .swiper-slide,
    .banner-with-text-{{ section.id }} .static-slide {
      height: 408px;
    }
  }

  @media screen and (min-width: 769px) {
    .banner-with-text .slide-image-desktop {
      display: block;
    }

    .banner-with-text .slide-image-mobile {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .banner-with-text-{{ section.id }} .swiper-slide,
    .banner-with-text-{{ section.id }} .static-slide {
      border-radius: 0;
    }
  }

  /* Static banner styles when no navigation */
  .banner-with-text-{{ section.id }} .static-banner {
    display: block;
  }

  .banner-with-text-{{ section.id }} .static-slide {
    width: 100%;
    display: block;
  }

  /* Desktop Navigation Controls */
  @media screen and (min-width: 769px) {
    {% if section.settings.desktop_nav == 'none' %}
      .banner-with-text-{{ section.id }} .slideshow-nav-button-prev,
      .banner-with-text-{{ section.id }} .slideshow-nav-button-next,
      .banner-with-text-{{ section.id }} .dot-pagination {
        display: none !important;
      }
    {% elsif section.settings.desktop_nav == 'nav' %}
      .banner-with-text-{{ section.id }} .dot-pagination {
        display: none !important;
      }
    {% elsif section.settings.desktop_nav == 'dots' %}
      .banner-with-text-{{ section.id }} .slideshow-nav-button-prev,
      .banner-with-text-{{ section.id }} .slideshow-nav-button-next {
        display: none !important;
      }
    {% endif %}
  }

  /* Mobile Navigation Controls */
  @media screen and (max-width: 768px) {
    {% if section.settings.mobile_nav == 'none' %}
      .banner-with-text-{{ section.id }} .slideshow-nav-button-prev,
      .banner-with-text-{{ section.id }} .slideshow-nav-button-next,
      .banner-with-text-{{ section.id }} .dot-pagination {
        display: none !important;
      }
    {% elsif section.settings.mobile_nav == 'nav' %}
      .banner-with-text-{{ section.id }} .dot-pagination {
        display: none !important;
      }
    {% elsif section.settings.mobile_nav == 'dots' %}
      .banner-with-text-{{ section.id }} .slideshow-nav-button-prev,
      .banner-with-text-{{ section.id }} .slideshow-nav-button-next {
        display: none !important;
      }
    {% endif %}
  }
</style>

{% comment %} Check if both desktop and mobile navigation are set to 'none' {% endcomment %}
{% liquid
  assign both_nav_none = false
  if section.settings.desktop_nav == 'none' and section.settings.mobile_nav == 'none'
    assign both_nav_none = true
  endif
%}

{% if both_nav_none %}
  {% comment %} Render as static banner when both navigations are 'none' {% endcomment %}
  <div class="banner-with-text banner-with-text-{{ section.id }}">
    <div class="static-banner">
      {% for block in section.blocks limit: 1 %}
        <div class="static-slide {% unless block.settings.mobile_image %}slide-no-mobile-image{% endunless %}" 
             {{ block.shopify_attributes }}
             data-block-id="{{ block.id }}"
             data-block-type="{{ block.type }}">
          
          {% comment %} Desktop Image {% endcomment %}
          {% if block.settings.image != blank %}
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}"{% if block.settings.link_target %} target="_blank" rel="noopener"{% endif %}>
            {% endif %}
            {%- capture sizes %}{% render 'sizes-attribute', grid: true, min: 1, sm: 1, lg: 1, xl: 1 %}{% endcapture -%}
            {%- liquid
              assign img = block.settings.image
              assign m_img = block.settings.mobile_image
            -%}
            {%- render 'image-desktop-and-mobile',
              class: 'img-fit',
              desktop_image: img,
              mobile_image: m_img,
              src_width_mobile: 980,
              widths_mobile: '480, 980, 1200, 1400',
              src_width_desktop: 1440,
              widths_desktop: '480, 980, 1200, 1440, 1600, 1920, 2560, 3200',
              lazy_load: true,
              fetchpriority: "high",
              sizes: sizes,
              block: block
            -%}
            {% if block.settings.link != blank %}</a>{% endif %}
          {% else %}
            {{ "lifestyle-1" | placeholder_svg_tag: "placeholder-svg slide-image-desktop" }}
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
{% else %}
  {% comment %} Render as slideshow component when navigation is enabled {% endcomment %}
  <slideshow-component
    class="banner-with-text banner-with-text-{{ section.id }}"
    data-autoplay="{{ section.settings.enable_autoplay }}"
    data-autoplay-delay="{{ section.settings.autoplay_delay | times: 1000 }}"
    data-pause-on-hover="{{ section.settings.pause_on_hover }}"
    data-single-slide-view="true"
  >
    <div class="slideshow-container">
      <div class="swiper-container">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide {% unless block.settings.mobile_image %}slide-no-mobile-image{% endunless %}" 
                 {{ block.shopify_attributes }}
                 data-block-id="{{ block.id }}"
                 data-block-type="{{ block.type }}">
              
              {% comment %} Desktop Image {% endcomment %}
              {% if block.settings.image != blank %}
                {% if block.settings.link != blank %}
                  <a href="{{ block.settings.link }}"{% if block.settings.link_target %} target="_blank" rel="noopener"{% endif %}>
                {% endif %}
                {%- capture sizes %}{% render 'sizes-attribute', grid: true, min: 1, sm: 1, lg: 1, xl: 1 %}{% endcapture -%}
                {%- liquid
                  assign img = block.settings.image
                  assign m_img = block.settings.mobile_image
                -%}
                {%- render 'image-desktop-and-mobile',
                  class: 'img-fit',
                  desktop_image: img,
                  mobile_image: m_img,
                  src_width_mobile: 980,
                  widths_mobile: '480, 980, 1200, 1400',
                  src_width_desktop: 1440,
                  widths_desktop: '480, 980, 1200, 1440, 1600, 1920, 2560, 3200',
                  lazy_load: true,
                  fetchpriority: "high",
                  sizes: sizes,
                  block: block
                -%}
                {% if block.settings.link != blank %}</a>{% endif %}
              {% else %}
                {% assign image_number = forloop.index0 | modulo: 2 | plus: 1 %}
                {{ "lifestyle-" | append: image_number | placeholder_svg_tag: "placeholder-svg slide-image-desktop" }}
              {% endif %}
            </div>
          {% endfor %}
        </div>

        {% comment %} Render dots only when needed {% endcomment %}
        {% liquid
          assign show_dots_desktop = false
          assign show_dots_mobile = false
          
          if section.settings.desktop_nav == 'dots' or section.settings.desktop_nav == 'both'
            assign show_dots_desktop = true
          endif
          
          if section.settings.mobile_nav == 'dots' or section.settings.mobile_nav == 'both'
            assign show_dots_mobile = true
          endif
        %}
        
        {% if show_dots_desktop or show_dots_mobile %}
          {% render "dot-buttons", items: section.blocks %}
        {% endif %}
      </div>

      <!-- Navigation arrows -->
      {% liquid
        assign show_arrows_desktop = false
        assign show_arrows_mobile = false
        
        if section.settings.desktop_nav == 'nav' or section.settings.desktop_nav == 'both'
          assign show_arrows_desktop = true
        endif
        
        if section.settings.mobile_nav == 'nav' or section.settings.mobile_nav == 'both'
          assign show_arrows_mobile = true
        endif
      %}
      
      {% if show_arrows_desktop or show_arrows_mobile %}
        {% render "nav-button", cls: "slideshow-nav-button-prev", icon_cls: "icon-arrow-left" %}
        {% render "nav-button", cls: "slideshow-nav-button-next" %}
      {% endif %}
    </div>
  </slideshow-component>
{% endif %}

{% schema %}
{
  "name": "Banner with Text",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Navigation Settings"
    },
    {
      "type": "select",
      "id": "desktop_nav",
      "label": "Desktop navigation",
      "default": "none",
      "info": "Choose navigation style for desktop devices",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "nav",
          "label": "Arrows only"
        },
        {
          "value": "dots",
          "label": "Dots only"
        },
        {
          "value": "both",
          "label": "Arrows + Dots"
        }
      ]
    },
    {
      "type": "select",
      "id": "mobile_nav",
      "label": "Mobile navigation",
      "default": "none",
      "info": "Choose navigation style for mobile devices",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "nav",
          "label": "Arrows only"
        },
        {
          "value": "dots",
          "label": "Dots only"
        },
        {
          "value": "both",
          "label": "Arrows + Dots"
        }
      ]
    },
    {
      "type": "header",
      "content": "Visual Settings"
    },
    {
      "type": "range",
      "id": "slide_border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Desktop border radius",
      "default": 0,
      "info": "Rounded corners for desktop view (mobile is always 0)"
    },
    {
      "type": "header",
      "content": "Autoplay Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_autoplay",
      "label": "Enable autoplay",
      "default": false,
      "info": "Automatically advance slides"
    },
    {
      "type": "range",
      "id": "autoplay_delay",
      "min": 2,
      "max": 10,
      "step": 0.5,
      "unit": "s",
      "label": "Autoplay delay",
      "default": 5,
      "info": "Time between slide transitions"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause autoplay on hover",
      "default": true,
      "info": "Pause slideshow when mouse hovers over it"
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner Image",
      "limit": 8,
      "settings": [
        {
          "type": "header",
          "content": "Banner Images"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Banner Image",
          "info": "Recommended size: 1400x400px or larger"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Banner Image (Optional)",
          "info": "Recommended size: 800x250px. If not provided, desktop image will be used."
        },
        {
          "type": "header",
          "content": "Link Settings"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Banner Link (Optional)",
          "info": "Makes the entire banner clickable"
        },
        {
          "type": "checkbox",
          "id": "link_target",
          "label": "Open link in new tab",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner with Text",
      "blocks": [
        {
          "type": "banner",
        }
      ]
    }
  ]
}
{% endschema %}