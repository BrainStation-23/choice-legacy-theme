<style>
  @media screen and (min-width: 769px) {
    {% unless section.settings.show_arrows_desktop %}
      .page-banner-{{ section.id }} .slideshow-nav-button-prev,
      .page-banner-{{ section.id }} .slideshow-nav-button-next {
        display: none !important;
      }
    {% endunless %}
  }

  @media screen and (max-width: 768px) {
    {% unless section.settings.show_arrows_mobile %}
      .page-banner-{{ section.id }} .slideshow-nav-button-prev,
      .page-banner-{{ section.id }} .slideshow-nav-button-next {
        display: none !important;
      }
    {% endunless %}
  }
</style>

{% liquid
  assign both_nav_none = false
  if section.settings.show_arrows_desktop == false and section.settings.show_arrows_mobile == false
    assign both_nav_none = true
  endif
%}

{% if both_nav_none %}
  <div class="page-banner page-banner-{{ section.id }} pt-0 pb-0 relative">
    <div class="static-banner block">
      {% for block in section.blocks limit: 1 %}
        <div class="static-slide h-276 sm:h-149 relative transition-transform block w-full {% unless block.settings.mobile_image %}slide-no-mobile-image{% endunless %}" 
             {{ block.shopify_attributes }}
             data-block-id="{{ block.id }}"
             data-block-type="{{ block.type }}">
          
          {% if block.settings.image != blank %}
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}"{% if block.settings.link_target %} target="_blank" rel="noopener"{% endif %}>
            {% endif %}
            {%- capture sizes %}{% render 'sizes-attribute', grid: true, min: 1, sm: 1, lg: 1, xl: 1 %}{% endcapture -%}
            {%- liquid
              assign img = block.settings.image
              assign m_img = block.settings.mobile_image
            -%}
            {%- render 'image-desktop-and-mobile',
              class: 'img-fit',
              desktop_image: img,
              mobile_image: m_img,
              src_width_mobile: 980,
              widths_mobile: '480, 980, 1200, 1400',
              src_width_desktop: 1440,
              widths_desktop: '480, 980, 1200, 1440, 1600, 1920, 2560, 3200',
              lazy_load: true,
              fetchpriority: "high",
              sizes: sizes,
              block: block
            -%}
            
              {% render "banner-text-overlay", block: block, section_id: section.id %}
            
            {% if block.settings.link != blank %}</a>{% endif %}
          {% else %}
            {{ "lifestyle-1" | placeholder_svg_tag: "placeholder-svg block sm:hidden" }}
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
{% else %}
  <slideshow-component
    class="page-banner page-banner-{{ section.id }}"
    data-autoplay="{{ section.settings.enable_autoplay }}"
    data-autoplay-delay="{{ section.settings.autoplay_delay | times: 1000 }}"
    data-pause-on-hover="{{ section.settings.pause_on_hover }}"
  >
    <div class="slideshow-container relative">
      <div class="swiper-container overflow-hidden">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide h-408 sm:186 relative transition-transform {% unless block.settings.mobile_image %}slide-no-mobile-image{% endunless %}" 
                 {{ block.shopify_attributes }}
                 data-block-id="{{ block.id }}"
                 data-block-type="{{ block.type }}">
              
              {% if block.settings.image != blank %}
                {% if block.settings.link != blank %}
                  <a href="{{ block.settings.link }}"{% if block.settings.link_target %} target="_blank" rel="noopener"{% endif %}>
                {% endif %}
                {%- capture sizes %}{% render 'sizes-attribute', grid: true, min: 1, sm: 1, lg: 1, xl: 1 %}{% endcapture -%}
                {%- liquid
                  assign img = block.settings.image
                  assign m_img = block.settings.mobile_image
                -%}
                {%- render 'image-desktop-and-mobile',
                  class: 'img-fit',
                  desktop_image: img,
                  mobile_image: m_img,
                  src_width_mobile: 980,
                  widths_mobile: '480, 980, 1200, 1400',
                  src_width_desktop: 1440,
                  widths_desktop: '480, 980, 1200, 1440, 1600, 1920, 2560, 3200',
                  lazy_load: true,
                  fetchpriority: "high",
                  sizes: sizes,
                  block: block
                -%}
                
                {% render "banner-text-overlay", block: block, section_id: section.id %}
                
                {% if block.settings.link != blank %}</a>{% endif %}
              {% else %}
                {% assign image_number = forloop.index0 | modulo: 2 | plus: 1 %}
                {{ "lifestyle-" | append: image_number | placeholder_svg_tag: "placeholder-svg block sm:hidden" }}
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>

      {% if section.settings.show_arrows_desktop or section.settings.show_arrows_mobile %}
        {% if section.blocks.size > 1 %}
          {% render "nav-button", cls: "slideshow-nav-button-prev top-50pct left-24", icon_cls: "icon-arrow-left" %}
          {% render "nav-button", cls: "slideshow-nav-button-next right-24" %}
        {% endif %}
      {% endif %}
    </div>
  </slideshow-component>
{% endif %}

{% schema %}
{
  "name": "Banner with Text",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Navigation Settings"
    },
    {
      "type": "checkbox",
      "id": "show_arrows_desktop",
      "label": "Show arrows on desktop",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_arrows_mobile",
      "label": "Show arrows on mobile",
      "default": false
    },
    {
      "type": "header",
      "content": "Autoplay Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_autoplay",
      "label": "Enable autoplay",
      "default": false,
      "info": "Automatically advance slides"
    },
    {
      "type": "range",
      "id": "autoplay_delay",
      "min": 2,
      "max": 10,
      "step": 0.5,
      "unit": "s",
      "label": "Autoplay delay",
      "default": 5,
      "info": "Time between slide transitions"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause autoplay on hover",
      "default": true,
      "info": "Pause slideshow when mouse hovers over it"
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner Image",
      "limit": 8,
      "settings": [
        {
          "type": "header",
          "content": "Banner Images"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Banner Image",
          "info": "Recommended size: 1400x400px or larger"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Banner Image (Optional)",
          "info": "Recommended size: 800x250px. If not provided, desktop image will be used."
        },
        {
          "type": "header",
          "content": "Overlay Text"
        },
        {
          "type": "text",
          "id": "overlay_text_line_1",
          "label": "Text Line 1",
          "info": "First line of overlay text"
        },
        {
          "type": "text",
          "id": "overlay_text_line_2",
          "label": "Text Line 2",
          "info": "Second line of overlay text"
        },
        {
          "type": "range",
          "id": "text_position_left",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Text position from left",
          "default": 16,
          "info": "Distance from left edge"
        },
        {
          "type": "range",
          "id": "text_position_top",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Text position from top",
          "default": 65,
          "info": "Percentage from top of banner"
        },
        {
          "type": "header",
          "content": "Link Settings"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Banner Link (Optional)",
          "info": "Makes the entire banner clickable"
        },
        {
          "type": "checkbox",
          "id": "link_target",
          "label": "Open link in new tab",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Page Banner",
      "blocks": [
        {
          "type": "banner"
        }
      ]
    }
  ]
}
{% endschema %}