{% assign image_ratio = 1 %}

<style>
  .scrolling-logo-placeholder-image {
    width: {{ section.settings.image_width }}px;
    height: {{ section.settings.image_height }}px;
  }
</style>

<section
  class="scrolling-logo overflow-hidden relative w-full pt-16 pb-16 bg-brand sm:pt-10 sm:pb-10"
  data-section-type="scrolling-logo"
  data-speed="{{ section.settings.speed }}"
  data-pausable="{{ section.settings.pausable }}"
>
  <div class="flex overflow-hidden w-full m-0-auto sm:w-full sm:p-0 sm:m-0-auto">
    {% assign img_width = section.settings.image_width | default: 60 %}
    {% assign repeat_times = 2 %}
    {% for i in (1..repeat_times) %}
      <div
        class="scrolling-logo__items play-normal-0-to-n100  flex shrink-0 items-center gap-40 sm:gap-0"
        aria-hidden="true"
      >
        {% for block in section.blocks %}
          <div
            class="scrolling-logo__item shrink-0 text-center"
            id="block-{{ block.id }}"
            {{ block.shopify_attributes }}
          >
            {% if block.settings.image != blank %}
              {%- capture sizes %}{% render 'sizes-attribute'%}{% endcapture -%}

              {% if block.settings.link != blank %}
                <a
                  href="{{ block.settings.link }}"
                  class=" media w-full "
                >
              {% else %}
                <div
                  class="media w-full "
                >
              {% endif %}
              {% render 'image',
                image: block.settings.image,
                src_width: img_width,
                alt_text: block.settings.image.alt,
                class: 'img-fit--contain',
                widths: '120, 120, 120, 120',
                sizes: sizes,
                quality: 1
              %}

              {% if block.settings.link != blank %}
                </a>
              {% else %}
                </div>
              {% endif %}

            {% else %}
              <div class=" flex-row">
                {{ 'collection-1' | placeholder_svg_tag: 'scrolling-logo-placeholder-image' }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endfor %}
  </div>
</section>

<script src="{{ 'scrolling-logo.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Scrolling logo",
  "tag": "section",
  "max_blocks": 10,
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },

    {
      "type": "range",
      "id": "image_height",
      "min": 50,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Image height",
      "default": 56
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 50,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "Image width",
      "default": 120
    },
    {
      "type": "header",
      "content": "Scrolling"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 5,
      "max": 50,
      "step": 1,
      "unit": "s",
      "label": "Speed",
      "default": 40
    },
    {
      "type": "checkbox",
      "id": "pausable",
      "label": "Pause on hover",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "image_text_block",
      "name": "Image block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scrolling logo",
      "blocks": [
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" }
      ]
    }
  ]
}
{% endschema %}
