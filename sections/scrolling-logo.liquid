{{ 'scrolling-banner.css' | asset_url | stylesheet_tag }}

<style>
  .scrolling-banner-{{ section.id }} {
    padding-top: {{ section.settings.top_padding }}px;
    padding-bottom: {{ section.settings.bottom_padding }}px;
  }

  .scrolling-banner-{{ section.id }} .scrolling-banner__image-img {
    width: {{ section.settings.image_width }}px;
    height: {{ section.settings.image_height }}px;
  }

  .scrolling-banner-{{ section.id }} .scrolling-banner__items {
    display: flex;
    flex-shrink: 0;
    align-items: center;
    gap: {{ section.settings.spacing }}px;
  }

  .scrolling-banner-{{ section.id }} .scrolling-banner__item-inner {
    display: flex;
    align-items: center;
    text-decoration: none;
    gap: 6px;
    flex-direction: row;
    padding: 6px;
  }

  .scrolling-banner-{{ section.id }} .scrolling-banner-placeholder-image {
    width: {{ section.settings.image_width }}px;
    height: {{ section.settings.image_height }}px;
  }
</style>

<div
  class="scrolling-banner scrolling-banner-{{ section.id }} section-common color-{{ section.settings.color_scheme }}"
  data-section-type="scrolling-banner"
  data-speed="{{ section.settings.speed }}"
  data-pausable="{{ section.settings.pausable }}"
>
  <div class="scrolling-banner__inner">
    <div class="scrolling-banner__items-container">
      {% assign img_height = section.settings.image_height | default: 60 %}
      {% assign img_width = section.settings.image_width | default: 60 %}
      {% assign repeat_times = 2 %}
      {% for i in (1..repeat_times) %}
        <div
          class="scrolling-banner__items scrolling-banner__items--normal"
          aria-hidden="true"
        >
          {% for block in section.blocks %}
            <div
              class="scrolling-banner__item"
              {{ block.shopify_attributes }}
            >
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" class="scrolling-banner__item-inner">
              {% else %}
                <div class="scrolling-banner__item-inner">
              {% endif %}

              {% if block.settings.image != blank %}
                <div class="scrolling-banner__image flex-row">
                  <img
                    src="{{ block.settings.image | image_url: width: img_width }}"
                    alt="{{ block.settings.image.alt | escape }}"
                    loading="lazy"
                    height="{{ img_height }}"
                    width="{{ img_width }}"
                    class="scrolling-banner__image-img"
                  >
                </div>
              {% else %}
                <div class="scrolling-banner__image flex-row">
                  {{ 'collection-1' | placeholder_svg_tag: 'scrolling-banner-placeholder-image' }}
                </div>
              {% endif %}

              {% if block.settings.link != blank %}
                </a>
              {% else %}
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<script src="{{ 'scrolling-banner.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Scrolling banner",
  "tag": "section",
  "class": "scrolling-banner",
  "max_blocks": 10,
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "image_height",
      "min": 60,
      "max": 120,
      "step": 5,
      "unit": "px",
      "label": "Image height",
      "default": 60
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 60,
      "max": 120,
      "step": 5,
      "unit": "px",
      "label": "Image width",
      "default": 60
    },
    {
      "type": "range",
      "id": "spacing",
      "min": 25,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Maximum space between blocks",
      "default": 30
    },
    {
      "type": "header",
      "content": "Scrolling"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "s",
      "label": "Speed",
      "default": 24
    },
    {
      "type": "checkbox",
      "id": "pausable",
      "label": "Pause on hover",
      "default": true
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "top_padding",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "bottom_padding",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "image_text_block",
      "name": "Image block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scrolling banner",
      "blocks": [
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" }
      ]
    }
  ]
}
{% endschema %}
