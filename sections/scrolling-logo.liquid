{{ 'scrolling-logo.css' | asset_url | stylesheet_tag }}
{% assign image_ratio = 1 %}

<style>
  .scrolling-logo-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: rgb(var(--color-primary-brand));
  }

  /* .scrolling-logo-{{ section.id }} .scrolling-logo__image-img {
    width: {{ section.settings.image_width }}px;
    height: {{ section.settings.image_height }}px;
  } */

  .scrolling-logo__image-container {
    height: 56px;
    position: relative;
    width: 100%;
  }

  .scrolling-logo-{{ section.id }} .scrolling-logo__items {
    display: flex;
    flex-shrink: 0;
    align-items: center;
  }

  .scrolling-logo-{{ section.id }} .scrolling-logo-placeholder-image {
    width: {{ section.settings.image_width }}px;
    height: {{ section.settings.image_height }}px;
  }
</style>

<section
  class="scrolling-logo scrolling-logo-{{ section.id }}  color-{{ section.settings.color_scheme }}"
  data-section-type="scrolling-logo"
  data-speed="{{ section.settings.speed }}"
  data-pausable="{{ section.settings.pausable }}"
>
  <div class="scrolling-logo__items-container ">
    {% assign img_height = section.settings.image_height | default: 60 %}
    {% assign img_width = section.settings.image_width | default: 60 %}
    {% assign repeat_times = 2 %}
    {% for i in (1..repeat_times) %}
      <div class="scrolling-logo__items scrolling-logo__items--normal gap-40" aria-hidden="true">
        {% for block in section.blocks %}
          <div class="scrolling-logo__item" id="block-{{ block.id }}" {{ block.shopify_attributes }}>
            <div class="scrolling-logo__image-container">
              {% if block.settings.image != blank %}
                {%- capture sizes %}{% render 'sizes-attribute' %}{% endcapture -%}

                {% if block.settings.link != blank %}
                  <a
                    href="{{ block.settings.link }}"
                    class="scrolling-logo__image  media w-full "
                  >
                {% else %}
                  <div
                    class="scrolling-logo__image media w-full"
                  >
                {% endif %}
                {% render 'image',
                  image: block.settings.image,
                  src_width: img_width,
                  alt_text: block.settings.image.alt,
                  class: 'img-fit',
                  widths: '120, 120, 120, 120',
                  sizes: sizes,
                  quality: 1
                %}

                {% if block.settings.link != blank %}
                  </a>
                {% else %}
                  </div>
                {% endif %}
                </div>
              {% else %}
                <div class="scrolling-logo__image flex-row">
                  {{ 'collection-1' | placeholder_svg_tag: 'scrolling-logo-placeholder-image' }}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endfor %}
  </div>
</section>

{% comment %} <script src="{{ 'scrolling-logo.js' | asset_url }}" defer></script> {% endcomment %}

{% schema %}
{
  "name": "Scrolling logo",
  "tag": "section",
  "class": "scrolling-logo",
  "max_blocks": 10,
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },

    {
      "type": "range",
      "id": "image_height",
      "min": 50,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Image height",
      "default": 56
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 50,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "Image width",
      "default": 120
    },
    {
      "type": "header",
      "content": "Scrolling"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 5,
      "max": 50,
      "step": 1,
      "unit": "s",
      "label": "Speed",
      "default": 40
    },
    {
      "type": "checkbox",
      "id": "pausable",
      "label": "Pause on hover",
      "default": true
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 40,
      "step": 2,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 40,
      "step": 2,
      "default": 16,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "image_text_block",
      "name": "Image block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scrolling logo",
      "blocks": [
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" },
        { "type": "image_text_block" }
      ]
    }
  ]
}
{% endschema %}
