<section class="pt-88 pb-88 bg-brand sm:pt-24 sm:pb-24">
  <div class="page-width flex justify-between gap-16 sm:gap-8">
    {% for block in section.blocks %}
      <div class=" flex flex-col flex-1 gap-16 sm:gap-8" {{ block.shopify_attributes }}>
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: section.settings.image_size }}"
            alt="{{ block.settings.image.alt | default: block.settings.heading }}"
            class=" h-48 w-48 sm:w-32 sm:h-32"
            loading="lazy"
            height="48"
            width="48"
          >
        {% else %}
          <div class="h-48 w-48 sm:w-32 sm:h-32">
            {{ 'collection-1' | placeholder_svg_tag }}
          </div>
        {% endif %}

        {% if block.settings.heading != blank %}
          <h3 class=" ff-bebas-neue fs-26-lh-26-ls-1_2 fw-400 sm:fs-15-lh-16-ls--1_2pct text-bg ">
            {{ block.settings.heading }}
          </h3>
        {% endif %}

        {% if block.settings.subheading != blank %}
          <p class="ff-inter fs-16-lh-24-ls-0 fw-400 sm:fs-12-lh-16-ls-0_6pct text-bg ">
            {{ block.settings.subheading }}
          </p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Service",
  "tag": "section",
  "settings": [],
  "blocks": [
    {
      "type": "service_item",
      "name": "Service Item",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Service Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Service Heading",
          "default": "Service Title"
        },
        {
          "type": "textarea",
          "id": "subheading",
          "label": "Service Description",
          "default": "Service description goes here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Service",
      "blocks": [
        {
          "type": "service_item"
        },
        {
          "type": "service_item"
        },
        {
          "type": "service_item"
        },
        {
          "type": "service_item"
        }
      ]
    }
  ]
}
{% endschema %}
