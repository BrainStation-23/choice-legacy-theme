<style>
  .copyright__section {
    padding-top: {{ section.settings.padding_top | default: 32 }}px;
    padding-bottom: {{ section.settings.padding_bottom | default: 32 }}px;
    background-color: rgba(var(--color-secondary-text), 0.02);
  }

  .copyright__content {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    text-align: center;
  }

  @media (max-width: 768px) {
    .copyright__content {
        justify-content: left;
    }
  }
</style>

<div
  class="copyright__section"
>
  <div class="page-width">
    <div class="copyright__content ff-general-sans fs-16-lh-24-ls-0">
      Â© {{ 'now' | date: '%Y' }}
      {{ shop.name }}. All rights reserved.
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Copyright Content",
  "settings": [
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Top padding",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Bottom padding",
      "default": 32
    }
  ],
  "presets": [
    {
      "name": "Copyright Content"
    }
  ]
}
{% endschema %}
