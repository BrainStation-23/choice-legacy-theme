<style>
  /* Desktop Navigation Controls */
  @media screen and (min-width: 769px) {
    {% unless section.settings.show_nav_desktop %}
      .offer-banner-{{ section.id }} .slideshow-nav-button-prev,
      .offer-banner-{{ section.id }} .slideshow-nav-button-next {
        display: none !important;
      }
    {% endunless %}
  }

  /* Mobile Navigation Controls */
  @media screen and (max-width: 768px) {
    {% unless section.settings.show_nav_mobile %}
      .offer-banner-{{ section.id }} .slideshow-nav-button-prev,
      .offer-banner-{{ section.id }} .slideshow-nav-button-next {
        display: none !important;
      }
    {% endunless %}
  }
</style>

{% liquid
  assign both_nav_none = false
  if section.settings.show_nav_desktop == false and section.settings.show_nav_mobile == false
    assign both_nav_none = true
  endif
%}

{% if both_nav_none %}
  <div class="offer-banner offer-banner-{{ section.id }} relative pt-0 pb-0">
    <div class="static-banner">
      {% for block in section.blocks limit: 1 %}
        <div class="static-slide relative transition-transform h-225 sm:h-164 block w-full {% unless block.settings.mobile_image %}slide-no-mobile-image{% endunless %}" 
             {{ block.shopify_attributes }}
             data-block-id="{{ block.id }}"
             data-block-type="{{ block.type }}">
          
          {% if block.settings.image != blank %}
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}"{% if block.settings.link_target %} target="_blank" rel="noopener"{% endif %}>
            {% endif %}
            {%- capture sizes %}{% render 'sizes-attribute', grid: true, min: 1, sm: 1, lg: 1, xl: 1 %}{% endcapture -%}
            {%- liquid
              assign img = block.settings.image
              assign m_img = block.settings.mobile_image
            -%}
            {%- render 'image-desktop-and-mobile',
              class: 'img-fit',
              desktop_image: img,
              mobile_image: m_img,
              src_width_mobile: 980,
              widths_mobile: '480, 980, 1200, 1400',
              src_width_desktop: 1440,
              widths_desktop: '480, 980, 1200, 1440, 1600, 1920, 2560, 3200',
              lazy_load: true,
              fetchpriority: "high",
              sizes: sizes,
              block: block
            -%}
            {% if block.settings.link != blank %}</a>{% endif %}
          {% else %}
            {{ "lifestyle-1" | placeholder_svg_tag: "placeholder-svg slide-image-desktop" }}
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
{% else %}
  <slideshow-component
    class="offer-banner offer-banner-{{ section.id }} relative pt-0 pb-0"
    data-autoplay="{{ section.settings.enable_autoplay }}"
    data-autoplay-delay="{{ section.settings.autoplay_delay | times: 1000 }}"
    data-pause-on-hover="{{ section.settings.pause_on_hover }}"
    data-single-slide-view="true"
  >
    <div class="slideshow-container overflow-hidden">
      <div class="swiper-container">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide relative transition-transform h-225 sm:h-164 block w-full {% unless block.settings.mobile_image %}slide-no-mobile-image{% endunless %}" 
                 {{ block.shopify_attributes }}
                 data-block-id="{{ block.id }}"
                 data-block-type="{{ block.type }}">
              
              {% if block.settings.image != blank %}
                {% if block.settings.link != blank %}
                  <a href="{{ block.settings.link }}"{% if block.settings.link_target %} target="_blank" rel="noopener"{% endif %}>
                {% endif %}
                {%- capture sizes %}{% render 'sizes-attribute', grid: true, min: 1, sm: 1, lg: 1, xl: 1 %}{% endcapture -%}
                {%- liquid
                  assign img = block.settings.image
                  assign m_img = block.settings.mobile_image
                -%}
                {%- render 'image-desktop-and-mobile',
                  class: 'img-fit',
                  desktop_image: img,
                  mobile_image: m_img,
                  src_width_mobile: 980,
                  widths_mobile: '480, 980, 1200, 1400',
                  src_width_desktop: 1440,
                  widths_desktop: '480, 980, 1200, 1440, 1600, 1920, 2560, 3200',
                  lazy_load: true,
                  fetchpriority: "high",
                  sizes: sizes,
                  block: block
                -%}
                {% if block.settings.link != blank %}</a>{% endif %}
              {% else %}
                {% assign image_number = forloop.index0 | modulo: 2 | plus: 1 %}
                {{ "lifestyle-" | append: image_number | placeholder_svg_tag: "placeholder-svg slide-image-desktop" }}
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>

      {% liquid
        assign show_arrows_desktop = section.settings.show_nav_desktop
        assign show_arrows_mobile = section.settings.show_nav_mobile
      %}
      
      {% if show_arrows_desktop or show_arrows_mobile %}
        {% render "nav-button", cls: "slideshow-nav-button-prev left-24", icon_cls: "icon-arrow-left" %}
        {% render "nav-button", cls: "slideshow-nav-button-next right-24" %}
      {% endif %}
    </div>
  </slideshow-component>
{% endif %}

{% schema %}
{
  "name": "Offer Banner",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Navigation Settings"
    },
    {
      "type": "checkbox",
      "id": "show_nav_desktop",
      "label": "Show navigation arrows on desktop",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_nav_mobile",
      "label": "Show navigation arrows on mobile",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner Image",
      "limit": 8,
      "settings": [
        {
          "type": "header",
          "content": "Banner Images"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Banner Image",
          "info": "Recommended size: 1400x400px or larger"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Banner Image (Optional)",
          "info": "Recommended size: 800x250px. If not provided, desktop image will be used."
        },
        {
          "type": "header",
          "content": "Link Settings"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Banner Link (Optional)",
          "info": "Makes the entire banner clickable"
        },
        {
          "type": "checkbox",
          "id": "link_target",
          "label": "Open link in new tab",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Offer Banner",
      "blocks": [
        {
          "type": "banner",
        }
      ]
    }
  ]
}
{% endschema %}