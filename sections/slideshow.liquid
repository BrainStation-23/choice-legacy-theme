<style>
  .slideshow {
    display: block;
    position: relative;
    padding: 60px 0;
    overflow: hidden;
  }

  .slideshow-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .slideshow-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .slideshow-container {
    margin: 0 auto;
    position: relative;
  }
  
  .swiper-container {
    width: 100%;
    height: 410px;
    overflow: visible;
  }
  
  .slideshow-{{ section.id }} .swiper-slide {
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease;
    border-radius: {{ section.settings.slide_border_radius }}px;
  }
  
  .slide-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Mobile image - hidden by default on desktop */
  .slide-image-mobile {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Show desktop image by default, hide mobile */
  .slide-image-desktop {
    display: block;
  }

  .slide-image-mobile {
    display: none;
  }

  /* On mobile screens, show mobile image if available, hide desktop */
  @media screen and (max-width: 768px) {
    .slide-image-desktop {
      display: none;
    }
    
    .slide-image-mobile {
      display: block;
    }
    
    /* If no mobile image, show desktop as fallback */
    .slide-no-mobile-image .slide-image-desktop {
      display: block;
    }
    
    .slide-no-mobile-image .slide-image-mobile {
      display: none;
    }
  }

  .slide-content {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
    max-width: 400px;
    padding: 0 20px;
  }

  /* Alignment positioning */
  .slide-content.align-left {
    left: 40px;
    text-align: left;
  }

  .slide-content.align-center {
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }

  .slide-content.align-right {
    right: 40px;
    text-align: right;
  }

  /* Card styling */
  .slide-content.card {
    background: rgba(var(--color-background));
    backdrop-filter: blur(10px);
    border-radius: 12px;
    padding: 30px;
  }

  .slide-title {
    font-weight: 700;
    margin-bottom: 12px;
  }

  .slide-description {
    margin-bottom: 20px;
  }

  .swiper-pagination {
    display: none;
  }
  
  .swiper-button-prev,
  .swiper-button-next {
    width: 44px;
    height: 44px;
    background: rgb(var(--color-secondary-brand, 0, 0, 0));
    color: rgb(var(--color-primary-text, 255, 255, 255));
    border-radius: 50%;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
  }

  .swiper-button-prev {
    left: calc(14% - 52px); /* Position in left gap */
  }

  .swiper-button-next {
    right: calc(14% - 52px); /* Position in right gap */
  }

  .swiper-button-prev:after,
  .swiper-button-next:after {
    font-size: 20px;
    color: rgb(var(--color-primary-text, 255, 255, 255));
  }

  .swiper-button-prev:after,
  .swiper-button-next:after {
    font-size: 20px;
    color: rgb(var(--color-primary-text, 255, 255, 255));
  }

  @media screen and (max-width: 1024px) {
    .swiper-button-prev:after,
    .swiper-button-next:after {
      font-size: 18px;
    }

    .swiper-button-prev {
      left: calc(11% - 52px); /* Position in left gap */
    }

    .swiper-button-next {
      right: calc(11% - 52px); /* Position in right gap */
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .slide-content {
      max-width: 300px;
      padding: 0 15px;
    }

    .slide-content.align-left {
      left: 20px;
    }

    .slide-content.align-right {
      right: 20px;
    }

    .slide-content.card {
      padding: 20px;
    }

    .swiper-button-prev:after,
    .swiper-button-next:after {
      font-size: 16px;
    }

    .swiper-button-prev {
      left: calc(15% - 52px); /* Position in left gap */
    }

    .swiper-button-next {
      right: calc(15% - 52px); /* Position in right gap */
    }

    .slideshow-{{ section.id }} .swiper-slide {
      border-radius: 0;
    }
  }
</style>

<slideshow 
  class="slideshow slideshow-{{ section.id }}"
  data-autoplay="{{ section.settings.enable_autoplay }}"
  data-autoplay-delay="{{ section.settings.autoplay_delay | times: 1000 }}"
  data-pause-on-hover="{{ section.settings.pause_on_hover }}">
  <div class="slideshow-container">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        
        {% for block in section.blocks %}
          <div class="swiper-slide {% unless block.settings.mobile_image %}slide-no-mobile-image{% endunless %}">
            {% comment %} Desktop Image {% endcomment %}
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 800 | image_tag: alt: block.settings.image.alt, class: 'slide-image slide-image-desktop' }}
            {% else %}
              {{ "lifestyle-1" | placeholder_svg_tag: "placeholder-svg slide-image-desktop" }}
            {% endif %}
            
            {% comment %} Mobile Image {% endcomment %}
            {% if block.settings.mobile_image != blank %}
              {{ block.settings.mobile_image | image_url: width: 800 | image_tag: alt: block.settings.mobile_image.alt, class: 'slide-image slide-image-mobile' }}
            {% elsif block.settings.image != blank %}
              {% comment %} Fallback to desktop image if no mobile image {% endcomment %}
              {{ block.settings.image | image_url: width: 800 | image_tag: alt: block.settings.image.alt, class: 'slide-image slide-image-mobile' }}
            {% else %}
              {{ "lifestyle-1" | placeholder_svg_tag: "placeholder-svg slide-image-mobile" }}
            {% endif %}
            
            {% if block.settings.title != blank or block.settings.description != blank or block.settings.button_text != blank %}
              <div class="slide-content {% if block.settings.show_card %}card{% endif %} align-{{ block.settings.content_alignment | default: 'left' }}">
                {% if block.settings.title != blank %}
                  <h3 class="slide-title">{{ block.settings.title }}</h3>
                {% endif %}
                
                {% if block.settings.description != blank %}
                  <p class="slide-description">{{ block.settings.description }}</p>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
      
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>
</slideshow>

<script src="{{ 'slideshow.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Image Slideshow",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Slideshow Settings"
    },
    {
      "type": "range",
      "id": "slide_border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Desktop slide border radius",
      "default": 6
    },
    {
      "type": "header",
      "content": "Autoplay Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_autoplay",
      "label": "Enable autoplay",
      "default": true,
      "info": "Automatically advance slides"
    },
    {
      "type": "range",
      "id": "autoplay_delay",
      "min": 2,
      "max": 10,
      "step": 0.5,
      "unit": "s",
      "label": "Autoplay delay",
      "default": 4,
      "info": "Time between slide transitions"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause autoplay on hover",
      "default": true,
      "info": "Pause slideshow when mouse hovers over it"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        },
        {
          "type": "header",
          "content": "Content Settings"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Slide Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Slide Description"
        },
        {
          "type": "checkbox",
          "id": "show_card",
          "label": "Show content in card container",
          "default": false
        },
        {
          "type": "select",
          "id": "content_alignment",
          "label": "Content alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}