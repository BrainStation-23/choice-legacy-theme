<style>
  .slideshow {
    display: block;
    position: relative;
    padding: 60px 0;
    overflow: hidden;
  }
  
  .slideshow .swiper-slide.swiper-slide-prev,
  .slideshow .swiper-slide.swiper-slide-next,
  .slideshow .swiper-slide.swiper-slide-active {
    margin-right: 16px !important;
  }

  .slideshow-container {
    margin: 0 auto;
    position: relative;
  }
  
  .swiper-container {
    width: 100%;
    height: 410px;
    overflow: visible; /* Allow partial slides to show */
  }
  
  .swiper-slide {
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease;
  }
  
  .slide-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  
  .swiper-pagination {
    display: none;
  }
  
  .swiper-button-prev,
  .swiper-button-next {
    width: 44px;
    height: 44px;
    background: rgb(var(--color-secondary-brand));
    color: rgb(var(--color-primary-text));
    border-radius: 50%;
  }

  .swiper-button-prev:after,
  .swiper-button-next:after {
    font-size: 20px;
    color: rgb(var(--color-primary-text));
  }
</style>

<image-slideshow class="slideshow">
  <div class="slideshow-container">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        
        {% for block in section.blocks %}
          <div class="swiper-slide">
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 800 | image_tag: alt: block.settings.image.alt, class: 'slide-image' }}
            {% else %}
              <div class="slide-placeholder">
                {{ block.settings.title | default: 'Image' | truncate: 1, '' }}
              </div>
            {% endif %}
            
            {% if block.settings.title != blank or block.settings.description != blank or block.settings.button_text != blank %}
              <div class="slide-content">
                {% if block.settings.title != blank %}
                  <h3 class="slide-title">{{ block.settings.title }}</h3>
                {% endif %}
                
                {% if block.settings.description != blank %}
                  <p class="slide-description">{{ block.settings.description }}</p>
                {% endif %}
                
                {% if block.settings.button_text != blank and block.settings.button_url != blank %}
                  <a href="{{ block.settings.button_url }}" class="slide-button">
                    {{ block.settings.button_text }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
      
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>
</image-slideshow>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.7/swiper-bundle.min.js"></script>

<script src="{{ 'slideshow.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Image Slideshow",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Slideshow Settings"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Slide Title",
          "default": "Slide Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Slide Description",
          "default": "Add your slide description here"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}