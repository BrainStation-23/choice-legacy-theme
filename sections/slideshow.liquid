<style>
  .slideshow {
    display: block;
    position: relative;
    padding: 60px 0;
    overflow: hidden;
  }

  .slideshow-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .slideshow-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .slideshow-container {
    margin: 0 auto;
    position: relative;
  }
  
  .slideshow .swiper-container {
    width: 100%;
    height: 410px;
    overflow: visible;
  }
  
  .slideshow-{{ section.id }} .swiper-slide {
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease;
    border-radius: {{ section.settings.slide_border_radius }}px;
  }
  
  .slide-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .slide-image-desktop {
    display: block;
  }

  .slide-image-mobile {
    display: none;
  }

  @media screen and (max-width: 768px) {
    .slide-image-desktop {
      display: none;
    }
    
    .slide-image-mobile {
      display: block;
    }
    
    .slide-no-mobile-image .slide-image-desktop {
      display: block; 
    }
    
    .slide-no-mobile-image .slide-image-mobile {
      display: none;
    }

    .slideshow .swiper-container {
      height: 186px;
    }
  }

  .slide-content {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
    max-width: 400px;
    padding: 0 20px;
  }

  .slide-content.align-left {
    left: 40px;
    text-align: left;
  }

  .slide-content.align-center {
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }

  .slide-content.align-right {
    right: 40px;
    text-align: right;
  }

  .slide-content.card {
    background: rgba(var(--color-background));
    backdrop-filter: blur(10px);
    border-radius: 12px;
    padding: 30px;
  }

  .slide-title {
    font-weight: 700;
    margin-bottom: 12px;
  }

  .slide-description {
    margin-bottom: 20px;
  }

  .slide-button {
    display: inline-block;
    padding: 12px 24px;
    background-color: rgba(var(--color-button));
    color: rgba(var(--color-button-text));
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .slide-button:hover {
    background-color: rgba(var(--color-button-text));
    color: rgba(var(--color-button));
  }

  .slideshow .swiper-pagination {
    display: none;
  }
  
  .slideshow-nav-button-prev,
  .slideshow-nav-button-next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
  }

  .slideshow-nav-button-prev {
    left: calc(14% - 52px);
  }

  .slideshow-nav-button-next {
    right: calc(14% - 52px);
  }

  .swiper-button-prev,
  .swiper-button-next {
    display: none;
  }

  @media screen and (max-width: 1024px) {
    .slideshow-nav-button-prev {
      left: calc(11% - 52px);
    }

    .slideshow-nav-button-next {
      right: calc(11% - 52px);
    }
  }

  @media (max-width: 768px) {
    .slide-content {
      max-width: 300px;
      padding: 0 15px;
    }

    .slide-content.align-left {
      left: 20px;
    }

    .slide-content.align-right {
      right: 20px;
    }

    .slide-content.card {
      padding: 20px;
    }

    .slideshow-nav-button-prev {
      left: calc(15% - 52px);
    }

    .slideshow-nav-button-next {
      right: calc(15% - 52px);
    }

    .slideshow-{{ section.id }} .swiper-slide {
      border-radius: 0;
    }
  }
</style>

<slideshow-component
  class="slideshow slideshow-{{ section.id }}"
  data-autoplay="{{ section.settings.enable_autoplay }}"
  data-autoplay-delay="{{ section.settings.autoplay_delay | times: 1000 }}"
  data-pause-on-hover="{{ section.settings.pause_on_hover }}"
>
  <div class="slideshow-container">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        
        {% for block in section.blocks %}
          <div class="swiper-slide {% unless block.settings.mobile_image %}slide-no-mobile-image{% endunless %}" 
               {{ block.shopify_attributes }}
               data-block-id="{{ block.id }}"
               data-block-type="{{ block.type }}">
            
            {% comment %} Desktop Image {% endcomment %}
            {% if block.settings.image != blank %}
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}"{% if block.settings.link_target %} target="_blank" rel="noopener"{% endif %}>
              {% endif %}
              {{ block.settings.image | image_url: width: 1200 | image_tag: alt: block.settings.image.alt, class: 'slide-image slide-image-desktop' }}
              {% if block.settings.link != blank %}</a>{% endif %}
            {% else %}
             {% assign image_number = forloop.index0 | modulo: 2 | plus: 1 %}
             {{ "lifestyle-" | append: image_number | placeholder_svg_tag: "placeholder-svg slide-image-desktop" }}
            {% endif %}
            
            {% comment %} Mobile Image {% endcomment %}
            {% if block.settings.mobile_image != blank %}
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}"{% if block.settings.link_target %} target="_blank" rel="noopener"{% endif %}>
              {% endif %}
              {{ block.settings.mobile_image | image_url: width: 800 | image_tag: alt: block.settings.mobile_image.alt, class: 'slide-image slide-image-mobile' }}
              {% if block.settings.link != blank %}</a>{% endif %}
            {% elsif block.settings.image != blank %}
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}"{% if block.settings.link_target %} target="_blank" rel="noopener"{% endif %}>
              {% endif %}
              {{ block.settings.image | image_url: width: 800 | image_tag: alt: block.settings.image.alt, class: 'slide-image slide-image-mobile' }}
              {% if block.settings.link != blank %}</a>{% endif %}
            {% else %}
              {{ "lifestyle-1" | placeholder_svg_tag: "placeholder-svg slide-image-mobile" }}
            {% endif %}
            
            {% comment %} Slide Content {% endcomment %}
            {% if block.settings.title != blank or block.settings.description != blank or block.settings.button_text != blank %}
              <div class="slide-content {% if block.settings.show_card %}card{% endif %} align-{{ block.settings.content_alignment | default: 'left' }}">
                {% if block.settings.title != blank %}
                  <h3 class="slide-title">{{ block.settings.title }}</h3>
                {% endif %}
                
                {% if block.settings.description != blank %}
                  <p class="slide-description">{{ block.settings.description }}</p>
                {% endif %}

                {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                  <a href="{{ block.settings.button_link }}" 
                     class="slide-button"
                     {% if block.settings.button_target %}target="_blank" rel="noopener"{% endif %}>
                    {{ block.settings.button_text }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>

    {% render "nav-button", cls: "slideshow-nav-button-prev", icon_cls: "icon-arrow-left" %}

    {% render "nav-button", cls: "slideshow-nav-button-next" %}
    
  </div>
</slideshow-component>

<script src="{{ 'slideshow.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Image Slideshow",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Slideshow Settings"
    },
    {
      "type": "range",
      "id": "slide_border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Desktop slide border radius",
      "default": 6
    },
    {
      "type": "header",
      "content": "Autoplay Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_autoplay",
      "label": "Enable autoplay",
      "default": true,
      "info": "Automatically advance slides"
    },
    {
      "type": "range",
      "id": "autoplay_delay",
      "min": 2,
      "max": 10,
      "step": 0.5,
      "unit": "s",
      "label": "Autoplay delay",
      "default": 4,
      "info": "Time between slide transitions"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause autoplay on hover",
      "default": true,
      "info": "Pause slideshow when mouse hovers over it"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 10,
      "settings": [
        {
          "type": "header",
          "content": "Images"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image",
          "info": "Recommended size: 1200x400px"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image (Optional)",
          "info": "Recommended size: 800x300px. If not provided, desktop image will be used."
        },
        {
          "type": "header",
          "content": "Link Settings"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Slide Link (Optional)",
          "info": "Makes the entire slide clickable"
        },
        {
          "type": "checkbox",
          "id": "link_target",
          "label": "Open link in new tab",
          "default": false
        },
        {
          "type": "header",
          "content": "Content Settings"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Slide Title",
          "placeholder": "Enter slide title..."
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Slide Description",
          "placeholder": "Enter slide description..."
        },
        {
          "type": "checkbox",
          "id": "show_card",
          "label": "Show content in card container",
          "default": false,
          "info": "Adds a semi-transparent background behind the content"
        },
        {
          "type": "select",
          "id": "content_alignment",
          "label": "Content alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },
        {
          "type": "header",
          "content": "Button Settings"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text (Optional)",
          "placeholder": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link",
          "info": "Required if button text is provided"
        },
        {
          "type": "checkbox",
          "id": "button_target",
          "label": "Open button link in new tab",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Slideshow",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "title": "Welcome to Our Store",
            "description": "Discover our latest collection",
            "button_text": "Shop Now"
          }
        },
        {
          "type": "slide",
          "settings": {
            "title": "New Arrivals",
            "description": "Fresh styles for the season",
            "button_text": "Explore"
          }
        },
        {
          "type": "slide",
          "settings": {
            "title": "Special Offers",
            "description": "Don't miss out on our deals",
            "button_text": "Save Now"
          }
        }
      ]
    }
  ]
}
{% endschema %}