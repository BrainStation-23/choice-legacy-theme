{{ 'collections-list.css' | asset_url | stylesheet_tag }}
{% assign minShown = 5 %}
{% assign blockCount = section.blocks.size %}
{% if blockCount < minShown %}
  {% assign minShown = blockCount %}
{% endif %}
{% assign image_ratio = 1 %}
<style>
    .collections-list-{{ section.id }} {
      padding-top: 88px;
      padding-bottom: 88px;
    }

    .collections-list__grid {
      display: grid;
      grid-template-columns: repeat({{ minShown }}, 1fr);
      justify-items: center;
      align-items: stretch;
    }

    .collections-list__swiper-wrapper {
      display: none;
    }

    @media screen and (max-width: 768px) {
      .collections-list-{{ section.id }} {
        padding-top: 23px;
        padding-bottom: 16px;
      }
      .collections-list__item {
        width: 116px !important;
      }

       .collections-list__swiper-wrapper .swiper-container{
        gap:24px !important
       }

      .collections-list__grid {
        display: none;
      }

      .collections-list__swiper-wrapper {
        display: block;
      }

      .collections-list__swiper-wrapper .swiper-container {
        position: relative;
        padding-bottom: 20px;
      }

      .collections-list__swiper-wrapper .swiper-slide {
        box-sizing: border-box;
      }
       .collections-list__swiper-wrapper .swiper-slide:last-child {
        margin-right: 0;
      }

    }

    @media screen and (min-width: 769px) and (max-width: 1023px) {
     .collections-list__grid{
      gap: 16px !important;
     }

    }

    @media screen and (min-width: 1024px) and (max-width: 1264px) {

  .collections-list__grid{
      gap: 20px !important;
     }
    }
</style>

<section class="collections-list collections-list-{{ section.id }}">
  <div class="collections-list__container page-width gap-64">
    {% if section.settings.title != blank %}
      <h2 class="collections-list__title ff-bebas-neue fw-400 fs-36-lh-40-ls-0 mobile-fs-21-lh-24-ls-1_2pct">
        {{ section.settings.title }}
      </h2>
    {% endif %}

    <div class="collections-list__grid gap-24">
      {% for block in section.blocks %}
        {% if block.settings.collection %}
          <div class="collections-list__item" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.collection.url }}" class="collections-list__link">
              <div
                class="collection-list-image media block relative"
                style="padding-top: {{ 1 | divided_by: image_ratio | times: 100 }}%;"
              >
                {% if block.settings.collection.featured_image %}
                  {%- capture sizes %}{% render 'sizes-attribute', grid: true, min: 1, sm: 2, lg: 3, xl: 5 %}{% endcapture -%}
                  {% render 'image',
                    image: block.settings.collection.featured_image,
                    widths: '116, 234, 234, 234',
                    src_width: 234,
                    sizes: sizes,
                    class: 'img-fit',
                    quality: 1
                  %}
                {% else %}
                  <div class="collections-list__image">
                    {{ 'collection-1' | placeholder_svg_tag: 'collections-list__image' }}
                  </div>
                {% endif %}
              </div>

              <div class="collections-list__content">
                <h3 class="collections-list__name ff-bebas-neue fw-400 fs-26-lh-26-ls-1_2 mobile-fs-15-lh-16-ls--1_2pct">
                  {% if block.settings.collection.title %}
                    {{ block.settings.collection.title }}
                  {% else %}
                    {{ 'sections.collections_list.default_title' | t }}
                  {% endif %}
                </h3>
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="collections-list__swiper-wrapper">
      <slideshow-component
        data-autoplay="false"
        data-show-progress-bar="true"
        data-slides-per-view-desktop="3"
        data-single-slide-view="true"
        data-slide-width-mobile="116px"
        data-slide-width-tablet="116px"
        data-slide-width-desktop="116px"
      >
        <div class="swiper-container flex flex-col gap-24">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {% if block.settings.collection %}
                <div class="swiper-slide collections-list__item" {{ block.shopify_attributes }}>
                  <a href="{{ block.settings.collection.url }}" class="collections-list__link">
                    {% if block.settings.collection.featured_image %}
                      <div
                        class="collection-list-image media block relative"
                        style="padding-top: {{ 1 | divided_by: image_ratio | times: 100 }}%;"
                      >
                        {%- capture sizes %}{% render 'sizes-attribute', grid: true, min: 1, sm: 2, lg: 3, xl: 5 %}{% endcapture -%}

                        {% render 'image',
                          image: block.settings.collection.featured_image,
                          alt_text: block.settings.collection.title,
                          widths: '116, 234, 234, 234',
                          src_width: 116,
                          sizes: sizes,
                          class: 'img-fit',
                          quality: 1
                        %}
                      </div>
                    {% else %}
                      <div class="collections-list__image">
                        {{ 'collection-1' | placeholder_svg_tag: 'collections-list__image' }}
                      </div>
                    {% endif %}

                    <div class="collections-list__content">
                      <h3 class="collections-list__name mobile-fs-15-lh-16-ls--1_2pct ff-bebas-neue fw-400">
                        {{ block.settings.collection.title | default: 'Collection' }}
                      </h3>
                    </div>
                  </a>
                </div>
              {% endif %}
            {% endfor %}
          </div>
          {% render 'slideshow-progress-bar' %}
        </div>
      </slideshow-component>
    </div>
  </div>
</section>

