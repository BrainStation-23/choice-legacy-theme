[
  {
    "name": "theme_info",
    "theme_name": "Choice Legacy",
    "theme_version": "1.6.2",
    "theme_author": "Brain Station 23",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "General"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "primary_text_color",
        "label": "Primary text",
        "default": "#393F41"
      },
      {
        "type": "color",
        "id": "primary_label_color",
        "label": "Primary label",
        "default": "#464C4F"
      },
      {
        "type": "color",
        "id": "secondary_text",
        "label": "Secondary text",
        "default": "#282E30"
      },
      {
        "type": "color",
        "id": "primary_brand_color",
        "label": "Primary brand",
        "default": "#FB6F92"
      },
      {
        "type": "color",
        "id": "secondary_brand_color",
        "label": "Secondary brand",
        "default": "#FFE9EE"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Font",
        "default": "nunito_sans_n7"
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Font",
        "default": "nunito_sans_n4"
      },
      {
        "type": "header",
        "content": "Navigation"
      },
      {
        "type": "font_picker",
        "id": "link_font",
        "label": "Font",
        "default": "inter_n1"
      }
    ]
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "brand_logo",
        "label": "Logo",
        "info": "180px x 180px .png recommended."
      },

      {
        "type": "text",
        "id": "logo_text",
        "label": "Logo alt text",
        "default": "Brand logo",
        "info": "This is applyed when brand logo is not set. "
      },
      // alt
      {
        "type": "text",
        "id": "logo_alt_text",
        "label": "Logo alt text",
        "default": "Logo",
        "info": "This is used for accessibility and SEO purposes. It should describe the logo image."
      },
      // height
      {
        "type": "range",
        "id": "logo_height",
        "label": "Logo height",
        "min": 40,
        "max": 100,
        "step": 5,
        "unit": "px",
        "default": 40
      },
      //  width
      {
        "type": "range",
        "id": "logo_width",
        "label": "Logo width",
        "min": 100,
        "max": 240,
        "step": 2,
        "unit": "px",
        "default": 140
      }
    ]
  }
]
