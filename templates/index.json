{
  "sections": {
    "slideshow": {
      "type": "slideshow",
      "settings": {
        "slide_border_radius": 6,
        "enable_autoplay": true,
        "autoplay_delay": 4,
        "pause_on_hover": true,
        "padding_top": 0,
        "padding_bottom": 0
      },
      "blocks": {
        "slide-1": {
          "type": "slide",
          "settings": {
            "title": "Welcome to Our Store",
            "description": "Discover amazing products and incredible deals",
            "show_card": true,
            "content_alignment": "left"
          }
        },
        "slide-2": {
          "type": "slide",
          "settings": {
            "title": "Premium Quality",
            "description": "Experience the finest materials and craftsmanship",
            "show_card": true,
            "content_alignment": "center"
          }
        },
        "slide-3": {
          "type": "slide",
          "settings": {
            "title": "Fast Shipping",
            "description": "Get your order delivered quickly and safely",
            "show_card": true,
            "content_alignment": "right"
          }
        }
      },
      "block_order": ["slide-1", "slide-2", "slide-3"]
    }
  },
  "order": ["slideshow"]
}
